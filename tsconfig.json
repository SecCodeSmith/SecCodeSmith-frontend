{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*":            ["src/*"],
      "@assets/*":      ["src/assets/*"],
      "@components/*":  ["src/components/*"],
      "@pages/*":       ["src/pages/*"],
      "@data/*":        ["src/data/*"],
      "@styles/*":      ["src/styles/*"],
      "@tests/*":       ["src/tests/*"],
      "@images/*":      ["src/assets/images/*"],
    },
    "moduleResolution": "node",
    "types": ["node"] 
  }
}
